@page "{handler?}"
@model WebClient.Pages.Questions.AddGrammaTaskModel
@{
    
 }

 @if(Model.Message != null)
{
    <div class="alert alert-success text-center" >
        <label>@Model.Message</label>
    </div>
}

<!--Создаём форму редактирования-->
<form method="post" class="mt-3">
    <!--Создаём скрытое поле для параметра ID-->
    <input type="hidden" asp-for="Student.Id" />
    
    <!--Добавляем поля редактирования-->
   

    <div class="col justify-content-center m-3">
        <div class="card-deck">
            <div class="card m-3">

                <div class="card-header">
                    <label>Добавление вопроса</label>
                </div>

                <div class="card-body text-center">
                   
                    <div class="form-group row">
                        <label asp-for="Sentence" class="col col-lg-4 col-form-label text-right">Введите предложение:</label>
                        <div class="col-12 col-lg-6">
                            <input asp-for="Sentence" class="form-control mr-2" placeholder="Введите предложение" />
                            <!--Добавляем сообщение валидации формы-->
                          
                        </div>
                    </div>

                     <div class="form-group row">
                        <label asp-for="AnswerVarients" class="col col-lg-4 col-form-label text-right">Введите варианты ответов:</label>
                        <div class="col-12 col-lg-6">
                            <input asp-for="AnswerVarients" class="form-control mr-2" placeholder="Введите варианты ответов через пробел" />
                            <!--Добавляем сообщение валидации формы-->

                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="RightAnswer" class="col col-lg-4 col-form-label text-right">Введите правильный ответ:</label>
                        <div class="col-12 col-lg-6">
                            <input asp-for="RightAnswer" class="form-control mr-2" placeholder="Введите ответы через пробел" />
                            <!--Добавляем сообщение валидации формы-->

                        </div>
                    </div>
                    
                </div>


                <div class="card-footer text-center">
                  @*  <a asp-page="/Questions/AddGrammaTask" asp-route-id="@Model.User.id" class="btn-success">добавить вопрос</a>*@
                    <button type="submit"  class="btn btn-success ">Update</button>
                </div>

            </div>
        </div>
    </div>






    <div class="col justify-content-center m-3">
        <div class="card-deck">
            <div class="card m-3">

                <div class="card-header">
                    <label>Грамматика</label>
                </div>

                <div class="card-body text-center">
                    
                    @foreach (var item in Model.Student._GrammaList.Last()?.questions)
                    {
                        <div class="row text-center">
                            <label>@item.Sentence</label>
                        </div>
                        

                        <div class="row text-center">
                            @foreach (var word in item.AnswerVarients.Split(' ').ToList())
                            {

                                <div class="col">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                                        <label class="form-check-label" for="inlineCheckbox1">@word</label>
                                    </div>
                                </div>


                            }
                        </div>
                       
                      
                    }
                </div>

                <div class="card-footer text-center">
                    
                    <button type="submit" asp-route-id="@Model.Student.Id" asp-page-handler="AddTask" class="btn btn-success ">Добавить задание</button>
                </div>

            </div>
        </div>
    </div>

</form>