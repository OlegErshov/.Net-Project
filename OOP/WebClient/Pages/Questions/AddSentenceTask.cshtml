@page
@model WebClient.Pages.Questions.AddSentenceTaskModel
@{
}


<form method="post" class="mt-3">
    <!--Создаём скрытое поле для параметра ID-->
    <input type="hidden" asp-for="Student.Id" />

    <!--Добавляем поля редактирования-->


    <div class="col justify-content-center m-3">
        <div class="card-deck">
            <div class="card m-3">

                <div class="card-header">
                    <label>Добавление вопроса</label>
                </div>

                <div class="card-body text-center">

                    <div class="form-group row">
                        <label asp-for="Answer" class="col col-lg-4 col-form-label text-right">Edit E-mail:</label>
                        <div class="col-12 col-lg-6">
                            <input asp-for="Answer" class="form-control mr-2" placeholder="Введите предложение" />
                            <!--Добавляем сообщение валидации формы-->

                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Words" class="col col-lg-4 col-form-label text-right">Edit E-mail:</label>
                        <div class="col-12 col-lg-6">
                            <input asp-for="Words" class="form-control mr-2" placeholder="Введите слова из предложения в произвольном порядке" />
                            <!--Добавляем сообщение валидации формы-->

                        </div>
                    </div>


                </div>


                <div class="card-footer text-center">
                    @*  <a asp-page="/Questions/AddGrammaTask" asp-route-id="@Model.User.id" class="btn-success">добавить вопрос</a>*@
                    <button type="submit" class="btn btn-success ">Update</button>
                </div>

            </div>
        </div>
    </div>

    <div class="col justify-content-center m-3">
        <div class="card-deck">
            <div class="card m-3">

                <div class="card-header">
                    <label>Грамматика</label>

                </div>
                
                <div class="card-body text-center">
                   
                        @foreach (var item in Model.Student._SentenceList.Last().questions)
                        {
                            <div class="col text-center">
                                @foreach (var ob in item.Words)
                                {
                                    <label>@ob /</label>
                                }
                            </div>
                           
                        }
                    
                </div>

               

                <div class="card-footer text-center">
                    <button type="submit" asp-route-id="@Model.Student.Id" asp-page-handler="AddTask" class="btn btn-success ">Добавить задание</button>
                </div>

            </div>
        </div>
    </div>

</form>