}

<form method="post" class="mt-3">
    <!--Создаём скрытое поле для параметра ID-->
    

    <!--Добавляем поля редактирования-->
   

    <div class="col justify-content-center m-3">
        <div class="card-deck">
            <div class="card m-3">

                <div class="card-header">
                    <label>Добавление ученика</label>
                </div>

                <div class="card-body text-center">
                   
                    <div class="form-group row">
                        <label asp-for="Login" class="col col-lg-4 col-form-label text-right">Edit E-mail:</label>
                        <div class="col-12 col-lg-6">
                            <input asp-for="Login" class="form-control mr-2" placeholder="Введите предложение" />
                            <!--Добавляем сообщение валидации формы-->
                          
                        </div>
                    </div>

                     <div class="form-group row">
                        <label asp-for="Email" class="col col-lg-4 col-form-label text-right">Edit E-mail:</label>
