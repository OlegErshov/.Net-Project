                            <input asp-for="Email" class="form-control mr-2" placeholder="Введите варианты ответов через пробел" />
                            <!--Добавляем сообщение валидации формы-->

                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Password" class="col col-lg-4 col-form-label text-right">Edit E-mail:</label>
