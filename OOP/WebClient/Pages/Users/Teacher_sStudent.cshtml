@page
@model WebClient.Pages.Users.Teacher_sStudentModel
@{
}

<form method="post">
    <div class="row">
        @foreach (var item in Model.Students)
        {
            <div class="col-12 col-sm-6 col-lg-3">

                <div class="card-deck">
                    <div class="card m-3">

                        <div class="card-header text-center">
                            <h5>Login : @item.UserName </h5>
                        </div>

                        <div class="card-body text-center">
                        </div>

                        <div class="card-footer text-center">
                            <button type="submit" asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger ">Отчислить</button>
                            <a asp-page="/Questions/AddTask" asp-route-id="@item.Id" class="btn btn-success">Добавить заданий</a>
                            <a asp-page="/Questions/Test" asp-route-id="@item.Id" class=" btn btn-primary">Список заданий</a>

                        </div>

                    </div>
                </div>


            </div>
        }
</form>
